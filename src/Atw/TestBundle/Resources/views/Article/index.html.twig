{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Article list</h1>
 
    {% include 'AtwTestBundle:Common:flashNotices.html.twig' %}

    {{ knp_pagination_render(entities, 'Atw\TestBundle:Pagination:default.html.twig') }}
    <table class="records_list">
        <thead>
            <tr>
                <th>ID</th>
                <th>タイトル</th>
                <th>記事内容</th>
                <th>URL</th>
                <th>サムネイル</th>
                <th>作成日時</th>
                <th>更新日時</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.url }}</td>
                <td><img src="{{ entity.thumbnailPath }}" alt="{{ entity.title }}"></td>
                <td>{{ entity.createdAt|datetime_format }}</td>
                <td>{{ entity.updatedAt|datetime_format }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('article_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('article_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('article_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
